<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Applicatio</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

   <!--<ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="#">Home</a></li>
        <li role="presentation"><a href="#">Profile</a></li>
        <li role="presentation"><a href="#">Messages</a></li>
    </ul>--> 

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Safari", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Salas", "Index", "Salas")</li>
                    <li>@Html.ActionLink("Tipo de Servicio", "Index", "TipoServicio")</li>
                    <li>@Html.ActionLink("Tipo de Movimiento", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Especies", "Index", "Especie")</li>
                    <li>@Html.ActionLink("Citas", "Index", "Cita")</li>

                </ul>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown"
                             aria-haspopup="true" aria-expanded="false">
                        Más opciones
                        <!--<span class="caret"></span>-->
                    </button>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Salas", "Index", "Salas")</li>
                        <li role="separator" class="divider"></li>
                        <li>@Html.ActionLink("Tipo de Servicio", "Index", "TipoServicio")</li>
                    </ul>
                </div>
                
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Derechos Reservados</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
